{
 "env": {
   "browser": true,
   "commonjs": true,
   "es6": true
 },
 "extends": "eslint:recommended",
 "parserOptions": {
   "ecmaVersion": 2017,
   "sourceType": "module"
 },
 "rules": {
   "indent": [
     "error",
     "tab"
   ],
   "quotes": [
     "error",
     "single"
   ],
   "semi": [
     "error",
     "always"
   ]
 }
}